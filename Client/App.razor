	<Found Context="routeData">
		<RouteView RouteData="@routeData" DefaultLayout="@typeof(NazmLayout)" />
	</Found>
	<NotFound>
		<LayoutView Layout="@typeof(NazmLayout)">
            <p class="alert alert-warning">
                @(Resources.Messages.Common.RouterNotFound)
            </p>
		</LayoutView>
	</NotFound>
</Router>

